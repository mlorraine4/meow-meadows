extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Pet name' name='name' required='true' value=(undefined===pet ? '' : pet.name) )
    div.form-group
      label(for='color') Color:
      input#color.form-control(type='text', placeholder='Pet color' name='color' required='true' value=(undefined===pet ? '' : pet.color))
    div.form-group
      label(for='breed') Breed:
      input#breed.form-control(type='text', placeholder='Breed' name='breed' required='true' value=(undefined===pet ? '' : pet.breed))
    div.form-group
      label(for='age') Age:
      input#age.form-control(type='text', placeholder='Age' name='age' value=(undefined===pet ? '' : pet.age) required='true')
    div.form-group
      label(for="gender") Gender: 
      input#gender.form-control(type='text', placeholder='Male or Female' name='gender', value=(undefined===pet ? '' : pet.gender) required='true' )
    div.form-group
      label(for='adoption_fee') Adoption Fee:
      input#adoption_fee.form-control(type='number', placeholder='Adoption Fee' name='adoption_fee' value=(undefined===pet ? '' : pet.adoption_fee) required='true')
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===pet ? '' : pet.description}
    div.form-group
      label(for='photo_url') Photo url:
      input#photo_url.form-control(type='text', placeholder='Photo url' name='photo_url' value=(undefined===pet ? '' : pet.photo_url) required='true')
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.radio-input(type='radio', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
