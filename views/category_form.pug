extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Category name:
      input#name.form-control(type='text' placeholder='Category Name' name='name' required='true' value=(undefined===name ? '' : category.name) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
